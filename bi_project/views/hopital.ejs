<% layout('layouts/layout') -%> 


<h1>Hopital</h1>
<div class="row">
<div class="col-sm-3">
<div class="panel panel-default">
<div class="panel-heading">
    <div class="panel-title">
        <a data-toggle="collapse" href="#collapse1">Search</a> 
    </div>
</div>
<div id="collapse1" class="panel-collapse collapse">
<div class="panel-body">
<form action="/hopital/update" method="post">
    <fieldset>
        <button type="button" class="btn btn-info btn-lg">Update</button>
    </fieldset>
</form>
</div>
</div>
</div>
</div>

<div class="col-sm-9">
    <h2>Liste des hôpitaux</h2>
    <% hopital.forEach(function(hop){%>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                <h3><%= hop.nom_du_centre_de_sante %></h3>
            </div>
        </div>
        <div class="panel-body">
            <ul>
                <li>Adresse : <%= hop.adresse_rue %></li>
                <li>Activité :  <%= hop.nom_de_lactivite%></li>
                <li>Ferme à : <%= hop.heure_de_fin %></li>
                <li>Description : <%= hop.description %></li>
                    
            </ul>     
        </div>
        <div class="panel-footer">
            <p><%= hop.numero_de_telephone%></p>        
        </div>
    </div>
    <%});%>
</div>
</div>
