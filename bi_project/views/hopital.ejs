<% layout('layouts/layout') -%> 

<h1>Hopital</h1>
<div class="row">
    <div class="col-sm-3 sidebar">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">
                    <a data-toggle="collapse" href="#collapse1">Search</a> 
                </div>
            </div>
        <div id="collapse1" class="panel-collapse collapse">
            <div class="panel-body">
                <form action="/hopital/update" method="post">
                   <fieldset>
                       <button type="submit" class="btn btn-info btn-lg">Update</button>
                   </fieldset>
                </form>
                
                <br />
                <h3>Recherche d'un hopital</h3>
                <form action="/hopital/search" method="post">
                    <div class="form-group">
                        <label for="name">Nom :</label>
                        <input type="text" class="form-control" id="name_hopital" placeholder="Entrez un nom d'hopital" />
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Recherche</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% if(hopital){%>
<div class="col-sm-9">
    <h2>Liste des hôpitaux : <%= total %></h2>
    <% hopital.forEach(function(hop){%>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                <h3><%= hop.nom_du_centre_de_sante %></h3>
            </div>
        </div>
        <div class="panel-body">
            <ul>
                <li>Adresse : <%= hop.adresse_rue %></li>
                <li>Activité :  <%= hop.nom_de_lactivite%></li>
                <li>Ouvre à : <%= hop.heure_de_debut %></li>
                <li>Ferme à : <%= hop.heure_de_fin %></li>
                <li>Description : <%= hop.description %></li>
                    
            </ul>     
        </div>
        <div class="panel-footer">
            <p><%= hop.numero_de_telephone%></p>        
        </div>
    </div>
    <%});%>
</div>
<%} else{ %>
    <p>Aucun Hopital</p>
<% }%>
</div>
